
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for everyone
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access only for authenticated users on paths that include their UID
    match /orders/{orderId}/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
